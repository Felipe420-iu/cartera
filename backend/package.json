{
  "name": "cartera-backend",
  "version": "1.0.0",
  "description": "Backend para aplicación de gestión de cartera de préstamos",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "reflect-metadata": "^0.1.13",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.9",
    "@types/cors": "^2.8.15",
    "@types/pg": "^8.10.7",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "keywords": [
    "loans",
    "wallet",
    "finance",
    "typescript",
    "express"
  ],
  "author": "Felipe Martinez",
  "license": "MIT"
}